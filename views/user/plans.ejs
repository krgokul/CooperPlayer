<html>
    <header>
        <link rel="stylesheet" href="/css/styles.css">
        <link href="https://fonts.googleapis.com/css2?family=Lato&family=Poppins&display=swap" rel="stylesheet">    
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"/>
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
		    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
      
      </head>
    <body id="plan-body"> 
<div id="plan-nav">
  <nav  aria-label="breadcrumb">
    <ol class="breadcrumb">
    <li class="breadcrumb-item "><a href="/users/<%=u_id%>">Home</a></li>
    <li class="breadcrumb-item active">Upgrade Plan</li> 
  </ol>
  </nav>
</div>
<h1 class="plan-head"><%=title%></h1>
    <%if(data!= ""){%>
<section class="price-comparison">
  <% data.forEach(function(record){ %>
    <div class="price-column">
      <div class="price-header">
        <div class="price" name="plan_id">
          <div class="dollar-sign">â‚¹</div>
          <%=record.price%>
          <div class="per-month">/<%=record.duration%>mo</div>
        </div> 
        <p id="plan_name" class="plan-name"><%=record.name%></p>
      </div>
      <div class="divider"></div>
     <div class="feature">
            <i class="fas fa-check"></i>
          Ad free songs
        </div>
        <div class="feature">
            <i class="fas fa-check"></i>
            <%=(record.downloads === "Limited")? "Limited": "Unlimited" %>
            songs to download
        </div>
        <div class="feature">
          <i class="fas fa-check"></i>
          <%=(record.quality === "Medium")? "Medium": "High" %> Quality Audio
        </div>
        <div class="feature ">
          <i class="fas fa-check"></i>
          Upto <%=record.devices%> device per user
        </div>   
      <button id="<%=record._id%>" type="submit" class="cta" name="btn">GET PLAN</button>
    </div>
    <%})}else{%>
      No plans :(
        <%}%>
</section>
 <script >
  $('button').click(function(){
      var plan_id = $(this).attr('id') 
      $.ajax({
        'type': 'post',
        'data': { 'plan' : plan_id},
        'url': '/users/upgrade/<%=u_id%>',
        success: function(response) {
         if (response.result == 'redirect') window.location.replace(response.url);
          }
      })
    });
 </script>
</body>
</html>